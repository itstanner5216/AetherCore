{
  "skill_name": "AetherCore.ReasoningChain",
  "version": "1.0",
  "description": "Enforces structured chain-of-thought reasoning with decomposition, step verification, and synthesis for complex queries.",
  "compatible_with": ["Universal Skill Integration Framework â‰¥1.0"],
  "execution_scope": "Subordinate",
  "callable": true,
  "auto_register": true,
  "entry_point": "reasoningchain.md",
  "dependencies": ["AetherCore.Orchestrator", "AetherCore.EventMesh"],
  "tools": {
    "decompose": {
      "description": "Break complex query into atomic sub-questions",
      "parameters": { "query": "string", "max_steps": "integer" },
      "returns": { "steps": "array", "dependencies": "object" }
    },
    "reason_step": {
      "description": "Execute reasoning for a single step with evidence",
      "parameters": { "step_id": "string", "context": "object" },
      "returns": {
        "conclusion": "string",
        "confidence": "number",
        "evidence": "array"
      }
    },
    "verify_step": {
      "description": "Validate reasoning step for logical consistency",
      "parameters": { "step_id": "string", "conclusion": "string" },
      "returns": {
        "valid": "boolean",
        "issues": "array",
        "suggestions": "array"
      }
    },
    "synthesize": {
      "description": "Combine verified steps into final conclusion",
      "parameters": { "steps": "array", "original_query": "string" },
      "returns": {
        "conclusion": "string",
        "reasoning_trace": "array",
        "confidence": "number"
      }
    }
  },
  "integration": {
    "inherits_from": "Full-Output Intelligence Protocol",
    "tone_inheritance": true,
    "logging": {
      "behavior": "append",
      "format": "json",
      "fields": ["timestamp", "step_id", "action", "confidence", "result"]
    }
  },
  "metadata": {
    "category": "reasoning",
    "status": "active",
    "tags": ["chain-of-thought", "verification", "logic", "synthesis"]
  },
  "persistence": {
    "cache_skill": true,
    "memory_scope": "session-temporary",
    "unload_on_exit": true
  }
}
